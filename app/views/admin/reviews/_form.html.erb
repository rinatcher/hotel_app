<%= render 'shared/errors', obj: @review %>
<div class="row " >
  <div class="col-xs-12">
    <%= form_with model: @review, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Имя", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :email, class: "form-control", placeholder: "Электронная почта", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Текст" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
